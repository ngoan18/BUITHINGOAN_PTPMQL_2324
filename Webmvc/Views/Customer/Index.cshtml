@model IEnumerable<Webmvc.Models.Customer>

@{
    ViewData["Title"] = "Index";
}

<h1>Thong tin chi tiet khach hang</h1>

<p>
    <a asp-action="Create">Tao moi 1 khach hang</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CustomerId">Sua</a> |
                <a asp-action="Details" asp-route-id="@item.CustomerId">Thong tin</a> |
                <a asp-action="Delete" asp-route-id="@item.CustomerId">Xoa</a>
            </td>
        </tr>
}
    </tbody>
</table>
