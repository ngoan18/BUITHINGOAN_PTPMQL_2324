@model Webmvc.Models.Student
<h1> Tao moi 1 sinh vien</h1>
<hr>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="StudentID" class="control-label"></label>
                <input asp-for="StudentID" class="form-control">
                <span asp-validation-for="StudentID" class="text-danger"></span>

            </div>

            <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control">
                        <span asp-validation-for="Name" class="text-danger"></span>

            </div>

             <div class="form-group">
                        <label asp-for="FacultyID" class="control-label"></label>
                        <select asp-for="FacultyID" class="form-control" asp-items="ViewBag.FacultyID"></select>
                     
            </div>
            <br>
            <div class="form-group">
                <input class="btn-primary" type="submit" value="Save">
                <a class="btn btn-success" asp-action="Index">Danh sach sinh vien</a>

            </div>

        </form>

    </div>
</div>